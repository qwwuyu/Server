<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qwwuyu.server.dao.CardMapper">
	<resultMap id="BaseResultMap" type="com.qwwuyu.server.bean.Card">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="nick" property="nick" jdbcType="VARCHAR" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="time" property="time" jdbcType="BIGINT" />
	</resultMap>
	<sql id="Base_Column_List">
		id, user_id, nick, title, time
	</sql>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from card
		where id = #{id,jdbcType=INTEGER}
	</select>
	<insert id="insert" parameterType="com.qwwuyu.server.bean.Card">
		insert into card (id, user_id, nick,
		title, time)
		values (#{id,jdbcType=INTEGER}, #{userId,jdbcType=INTEGER}, #{nick,jdbcType=VARCHAR},
		#{title,jdbcType=VARCHAR}, #{time,jdbcType=BIGINT})
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="com.qwwuyu.server.bean.Card">
		update card
		<set>
			<if test="userId != null">
				user_id = #{userId,jdbcType=INTEGER},
			</if>
			<if test="nick != null">
				nick = #{nick,jdbcType=VARCHAR},
			</if>
			<if test="title != null">
				title = #{title,jdbcType=VARCHAR},
			</if>
			<if test="time != null">
				time = #{time,jdbcType=BIGINT},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from card
		where id = #{id,jdbcType=INTEGER}
	</delete>
	<select id="selectByCard" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from card
		<where>
			<if test="card.id != -1">
				and id = #{card.id}
			</if>
			<if test="card.userId != -1">
				and user_id = #{card.userId}
			</if>
		</where>
		<if test="asc != null">
			ORDER BY #{asc} ASC
		</if>
		<if test="asc == null and desc != null">
			ORDER BY #{desc} DESC
		</if>
		<if test="limit != null and limit gt 0">
			LIMIT #{offset},#{limit}
		</if>
	</select>
</mapper>